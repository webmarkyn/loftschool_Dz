.header#header
        include ../partials/__top-shadow
        .header__bg
                img(src="assets/img/backgrounds/water.jpg")
        .header__svg-background-block
                svg.svg-background
                        use(xlink:href="assets/img/sprite.svg#portfolio_header")
        .menu
            .menu_container
                include ../partials/__social-icons
                .menu__icon
                        a.menu__link(href="")
                                svg.menu-svg.hamburger()
                                        use(xlink:href="assets/img/sprite.svg#hamburger")  
        include ../partials/__personal-info
        
        .header__triangle
                svg.triangle(xmlns='http://www.w3.org/2000/svg', viewbox='0 0 1000 85', preserveaspectratio='none')
                        polygon(points='0,0   0,86   500.8,86   500.8,75.5' class="" + customLeft)
                        polygon(points='1000,0   1000,86   500,86   500,75.5' class="" + customRight)
        .down-arrow-button.clearfix
                a.down-arrow-button__link.js-smooth-scroll(href="#footer")
                        svg.down-arrow-button__svg()
                                use(xlink:href="assets/img/sprite.svg#arrow_down")
        